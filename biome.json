{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/platforms/web/apps/storybook/storybook-static",
      "!!**/*.mdx",
      "!!**/scripts/new-component.mjs",
      "!!**/.*",
      "!!**/_temp",
      "!!**/_temp_import",
      "!!**/docs/examples",
      "!!**/src/**/generated",
      "!!**/pnpm-lock.yaml",
      "!!**/scripts/policy",
      "!!**/.ralph"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "linter": {
    "enabled": false
  },
  "assist": {
    "enabled": false
  },
  "overrides": []
}
