{
  "name": "@chatui/tokens",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./foundations.css": "./src/foundations.css",
    "./tokens.css": "./src/tokens.css",
    "./icon-picker-theme.css": "./src/icon-picker-theme.css",
    "./tailwind.preset": "./tailwind.preset.ts",
    "./tokens/index.dtcg.json": "./src/tokens/index.dtcg.json"
  },
  "files": [
    "src",
    "dist",
    "tailwind.preset.ts"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "./src/foundations.css",
    "./src/tokens.css",
    "./src/icon-picker-theme.css"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
    "generate": "tsx scripts/sync-dtcg.ts && tsx scripts/generate-tokens.ts",
    "tokens:sync": "tsx scripts/sync-dtcg.ts",
    "generate:watch": "tsx watch scripts/generate-tokens.ts",
    "validate": "tsx scripts/validate-tokens.ts",
    "dev": "tsx scripts/dev-tools.ts",
    "dev:verbose": "tsx scripts/dev-tools.ts --verbose",
    "dev:hot-reload": "tsx scripts/watch-tokens.ts",
    "dev:hot-reload:verbose": "tsx scripts/watch-tokens.ts --verbose",
    "tokens:watch": "tsx src/dev-tools/token-watcher.ts",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "fast-check": "^3.15.1",
    "vitest": "^4.0.16",
    "chokidar": "^3.5.3",
    "@types/node": "^20.0.0"
  }
}
