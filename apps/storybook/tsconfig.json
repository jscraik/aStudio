{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["@storybook/react"],
    "baseUrl": ".",
    "paths": {
      "@chatui/ui": ["../../packages/ui/src"],
      "@chatui/ui/*": ["../../packages/ui/src/*"],
      "@chatui/runtime": ["../../packages/runtime/src"],
      "@chatui/runtime/*": ["../../packages/runtime/src/*"]
    }
  },
  "include": ["../**/*.ts", "../**/*.tsx", ".storybook/**/*", "../../packages/ui/src/**/*"],
  "exclude": ["node_modules"]
}
