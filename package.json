{
  "name": "chatui-sdk-ready",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "concurrently -n web,storybook -c cyan,magenta \"pnpm dev:web\" \"pnpm dev:storybook\"",
    "dev:web": "pnpm -C apps/web dev",
    "dev:storybook": "pnpm -C apps/storybook dev",
    "dev:widgets": "pnpm -C packages/widgets dev",
    "build": "node scripts/build-pipeline.mjs",
    "build:web": "node scripts/build-pipeline.mjs --platforms web",
    "build:macos": "node scripts/build-pipeline.mjs --platforms macos",
    "build:incremental": "node scripts/build-pipeline.mjs",
    "build:clean": "node scripts/build-pipeline.mjs --no-incremental",
    "build:widget": "pnpm -C apps/web build:widget",
    "build:widgets": "pnpm -C packages/widgets build",
    "build:lib": "pnpm -C packages/ui build && pnpm -C packages/runtime build && pnpm -C packages/tokens build",
    "generate:tokens": "pnpm -C packages/tokens generate",
    "sync:versions": "node scripts/version-sync.mjs",
    "mcp:dev": "pnpm -C apps/mcp dev",
    "mcp:start": "pnpm -C apps/mcp start",
    "storybook:dev": "pnpm -C apps/storybook dev",
    "storybook:build": "pnpm -C apps/storybook build",
    "storybook:test": "pnpm -C apps/storybook test",
    "test": "pnpm -C packages/ui test",
    "test:e2e:web": "pnpm -C packages/ui build && pnpm exec playwright test -c apps/web/playwright.config.ts",
    "test:a11y:widgets": "pnpm -C packages/ui build && pnpm exec playwright test -c packages/widgets/playwright.a11y.config.ts",
    "test:a11y:widgets:ci": "pnpm exec playwright test -c packages/widgets/playwright.a11y.config.ts",
    "test:mcp-contract": "node --test apps/mcp/tests/tool-contract.test.mjs",
    "test:visual:web": "pnpm -C packages/ui build && pnpm exec playwright test -c apps/web/playwright.visual.config.ts",
    "test:visual:update": "pnpm -C packages/ui build && pnpm exec playwright test -c apps/web/playwright.visual.config.ts --update-snapshots",
    "test:swift": "cd packages/ui-swift && swift test",
    "test:cross-platform": "node scripts/build-pipeline.mjs --skip-tests=false",
    "test:build-pipeline": "npx vitest run scripts/build-pipeline.test.js --config scripts/vitest.config.js",
    "test:visual:storybook": "pnpm -C packages/ui build && pnpm exec playwright test -c apps/storybook/playwright.visual.config.ts",
    "test:visual:storybook:update": "pnpm -C packages/ui build && pnpm exec playwright test -c apps/storybook/playwright.visual.config.ts --update-snapshots",
    "bundle:analyze": "node ./scripts/bundle-size.mjs",
    "test:watch": "pnpm -C packages/ui test:watch",
    "test:coverage": "pnpm -C packages/ui test:coverage",
    "test:embed": "node ./apps/mcp/scripts/smoke.mjs",
    "lint:compliance": "node ./scripts/compliance.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "new:component": "node ./scripts/new-component.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-vitest": "^10.1.10",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "fast-check": "^3.15.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "storybook": "^10.1.10",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
      }
    },
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    }
  }
}