{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://chatui.dev/schemas/template-registry.schema.json",
    "title": "Template Registry Schema",
    "description": "Schema for ChatGPT UI template metadata",
    "type": "object",
    "properties": {
        "templates": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/template"
            }
        }
    },
    "required": [
        "templates"
    ],
    "additionalProperties": false,
    "definitions": {
        "template": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
                    "description": "Kebab-case template identifier"
                },
                "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "Human-readable template title"
                },
                "description": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 500,
                    "description": "Template description"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "educational",
                        "components",
                        "design-system",
                        "templates",
                        "layouts",
                        "settings",
                        "modals",
                        "panels"
                    ],
                    "description": "Template category for organization"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
                        "minLength": 1,
                        "maxLength": 30
                    },
                    "uniqueItems": true,
                    "maxItems": 10,
                    "description": "Searchable tags in kebab-case"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "alpha",
                        "beta",
                        "stable"
                    ],
                    "description": "Template maturity status"
                },
                "route": {
                    "type": "string",
                    "pattern": "^/[a-z0-9/-]+$",
                    "description": "URL route for deep linking"
                },
                "entry": {
                    "type": "string",
                    "pattern": "^[A-Z][a-zA-Z0-9]*$",
                    "description": "React component name (PascalCase)"
                },
                "sourcePath": {
                    "type": "string",
                    "pattern": "^src/templates/.+\\.tsx$",
                    "description": "Relative path to template source file"
                }
            },
            "required": [
                "id",
                "title",
                "description",
                "category",
                "tags",
                "status",
                "route",
                "entry",
                "sourcePath"
            ],
            "additionalProperties": false
        }
    }
}