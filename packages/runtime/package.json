{
  "name": "@design-studio/runtime",
  "version": "2.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "description": "DesignStudio Runtime - Host abstraction layer for embedded and standalone deployments",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/react": "^19.2.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
